<div class="row text-center">
  <h1 id="main-title">Rural Dictionary</h1>
</div>

<% if @message %>
  <div class="row text-center">
    <p class="lead"><%= @message %></p>
  </div>
<% end %>

<hr>
<div class="form-container">
  <form class="form-inline text-center" action="/word/new" method="post">
    <div class="form-group">
      <label for="name">Word to Define: </label>
      <input type="text" name="name" required class="form-control custom-input" id="name" placeholder="Ex: 'word'">
    </div><br>

    <div class="form-group">
      <label for="origin">Origin of Word: </label>
      <input type="origin" name="origin" required class="form-control custom-input" id="origin" placeholder="Ex: 'old english'">
    </div><br>
    <button type="submit" class="btn btn-primary custom-input">Add Word</button>
  </form>
</div>
<hr>

<% if @words %>
  <div class="row text-center">
    <h2>Current Words</h2>
  </div>

  <dl class="dl-horizontal">
    <% @words.each do |word| %>
      <dt><a href="/word/<%= word.id %>"><%= word.name %>&colon;</a></dt>
      <% word.definitions.each do |definition| %>
        <dd><%= definition.text %></dd>
        <dd>(<%= definition.part_of_speech %>)</dd>
      <% end %>
    <% end %>
  </dl>
<% end %>
